	/**
	* drawBars method draws the bars on the chart
	*/
	private function drawBars ()
	{
		//Variables
		var barMC : MovieClip, pStackMC : MovieClip, nStackMC : MovieClip;
		var barIns : Bar3D;
		var posDepth : Number = this.dm.getDepth ("DATAPLOTPOS");
		var negDepth : Number = this.dm.getDepth ("DATAPLOTNEG");
		var depth : Number;
		var i : Number;
		var j : Number;
		var animX : Number;
		//Create function storage containers for Delegate functions
		var fnRollOver : Function, fnClick : Function;
		//Rendered Bar Count
		var renderedBarCount : Number = 0;
		//Iterate through all bars
		//Using reverse loop for automatic depth iteration
		for (i = this.num; i >= 1; i --)
		{
			//For each data index, we now create two movie clips:
			//PosStack_i, NegStack_i (both on conditional basis)
			//Create the positive stack movie clip (if required).
			if (this.sums [i].pSum != undefined)
			{
				pStackMC = this.cMC.createEmptyMovieClip ("PosStack_" + i, posDepth);
				posDepth ++;
			}
			if (this.sums [i].nSum != undefined)
			{
				nStackMC = this.cMC.createEmptyMovieClip ("NegStack_" + i, negDepth);
				negDepth ++;
			}
			//Shift both the movie clips down so that bars can be positioned
			//inside at 0 x - for proper xScale animation
			pStackMC._x = this.config.basePlanePos - this.config.shifts.xShift;
			nStackMC._x = this.config.basePlanePos - this.config.shifts.xShift;
			//Reset bar count
			renderedBarCount = 0;
			//Now, iterate through each bar to create the stacked bar.
			for (j = 1; j <= this.numDS; j ++)
			{
				//If the bar is defined
				if (this.dataset [j].data [i].isDefined)
				{
					//Increase count
					renderedBarCount ++;
					depth = this.dataset [j].data [i].depth;
					//Based on whether the bar is positive or negative,
					//create an empty movie clip for this bar
					if (this.dataset [j].data [i].value >= 0)
					{
						barMC = pStackMC.createEmptyMovieClip ("Bar_" + i + "_" + j, depth);
					} else
					{
						barMC = nStackMC.createEmptyMovieClip ("Bar_" + i + "_" + j, depth);
					}
					//Create bar instance
					//We're adjusting X position of the bar inside stacked movie clip
					//so that the first bar (both positive and negative) originate at 0 X
					//and the rest on referential X. We do not alter Y.
					barIns = new Bar3D (barMC, this.dataset [j].data [i].x - this.config.basePlanePos + this.config.shifts.xShift, this.dataset [j].data [i].y, this.dataset [j].data [i].w, this.config.shifts.hFront, this.config.shifts.xShift, this.config.shifts.yShift, this.dataset [j].data [i].color, this.params.showPlotBorder, this.params.plotBorderColor, this.params.plotBorderAlpha);
					//Draw the bar
					barIns.draw (this.params.use3DLighting);
					//Set the alpha of entire bar
					barMC._alpha = this.dataset [j].data [i].alpha;
					//Event handlers for tool tip
					if (this.params.showToolTip)
					{
						//Create Delegate for roll over function barOnRollOver
						fnRollOver = Delegate.create (this, barOnRollOver);
						//Set the index
						fnRollOver.dsindex = j;
						fnRollOver.index = i;
						//Assing the delegates to movie clip handler
						barMC.onRollOver = fnRollOver;
						//Set roll out and mouse move too.
						barMC.onRollOut = barMC.onReleaseOutside = Delegate.create (this, barOnRollOut);
						barMC.onMouseMove = Delegate.create (this, barOnMouseMove);
					}
					//Click handler for links - only if link for this bar has been defined and click URL
					//has not been defined.
					if (this.dataset [j].data [i].link != "" && this.dataset [j].data [i].link != undefined && this.params.clickURL == "")
					{
						//Create delegate function
						fnClick = Delegate.create (this, barOnClick);
						//Set index
						fnClick.dsindex = j;
						fnClick.index = i;
						//Assign
						barMC.onRelease = fnClick;
					} 
					else
					{
						//Do not use hand cursor
						barMC.useHandCursor = (this.params.clickURL == "") ?false : true;
					}
				}
			}
			//Apply filters (only if bar count > 0)
			if (renderedBarCount > 0)
			{
				if (pStackMC._width>0){
					//Apply shadow on positive bar MC container, only if the container
					//contains columns
					this.styleM.applyFilters (pStackMC, this.objects.DATAPLOT);
				}
				if (nStackMC._width>0){
					this.styleM.applyFilters (nStackMC, this.objects.DATAPLOT);
				}
			}
			//Apply animation (only if bar count > 0)
			if (this.params.animation && renderedBarCount > 0)
			{
				//For Positive stack
				if (this.sums [i].pSum != undefined)
				{
					//We animate xScale only if |width| > this.config.shifts.xShift*1.5
					if (Math.abs (pStackMC._width) > (this.config.shifts.xShift * 1.5))
					{
						animX = 100;
					} 
					else
					{
						animX = null;
					}
					this.styleM.applyAnimation (pStackMC, this.objects.DATAPLOT, this.macro, this.dataset [j].data [i].x, 0, this.dataset [j].data [i].y, 0, 100, animX, 100, null);
				}
				//Negative Stack
				if (this.sums [i].nSum != undefined)
				{
					//We animate xScale only if |width| > this.config.shifts.xShift*1.5
					if (Math.abs (nStackMC._width) > (this.config.shifts.xShift * 1.5))
					{
						animX = 100;
					} 
					else
					{
						animX = null;
					}
					this.styleM.applyAnimation (nStackMC, this.objects.DATAPLOT, this.macro, this.dataset [j].data [i].x, 0, this.dataset [j].data [i].y, 0, 100, animX, 100, null);
				}
			}			
		}
		//Clear interval
		clearInterval (this.config.intervals.plot);
	}
