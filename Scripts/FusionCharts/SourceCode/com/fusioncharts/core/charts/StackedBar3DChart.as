		{
			//Get value text style
			var valueStyleObj : Object = this.styleM.getTextStyle (this.objects.DATAVALUES);
			//Container object
			var valueObj : MovieClip;
			//Depth
			var depth : Number = this.dm.getDepth ("DATASUM");
			//Loop var
			var i : Number;
			var xPos : Number, yPos : Number;
			var align : String, vAlign : String;
			////Iterate through all indexs
			for (i = 1; i <= this.num; i ++)
			{
				//If defined and value is to be shown
				if (this.sums [i].sum != 0)
				{
					//Align position
					align = (this.sums [i].sum < 0) ?"right" : "left";
					//Vertical Alignment position
					vAlign = "middle";
					//Get the y position
					xPos = this.config.basePlanePos + ((this.sums [i].sum < 0) ? (this.sums [i].nX - this.config.shifts.xShift - this.params.valuePadding) : (this.sums [i].pX + this.params.valuePadding));
					//Y-position
					yPos = (this.sums [i].sum >= 0) ? (this.categories [i].y - this.config.shifts.yShift) : (this.categories [i].y);
					//Convey alignment to rendering object
					valueStyleObj.align = align;
					valueStyleObj.vAlign = vAlign;
					valueObj = createText (false, this.sums [i].displayValue, this.cMC, depth, xPos , yPos, 0, valueStyleObj, false, 0, 0);
					//Apply filter
					this.styleM.applyFilters (valueObj.tf, this.objects.DATAVALUES);
